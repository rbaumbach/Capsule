# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  before_all do
    puts "Doin' some fastlane..."
  end

  desc "Builds and SwiftLints the workspace"
  lane :build do
    xcodebuild(scheme: "Capsule",
               workspace: "Capsule.xcworkspace",
               xcpretty_output: "simple")

   swiftlint(strict: true,
             quiet: true,
             config_file: ".swiftlint.yml",
             executable: "Pods/SwiftLint/swiftlint")
  end

  desc "Builds Capsule.framework.zip using Carthage"
  lane :build_carthage_framework do
    sh "cd .. && carthage build --no-skip-current && carthage archive Capsule"
  end

  after_all do |lane|
    puts "ðŸŒ® ðŸŒ® ðŸŒ®  Taco Time! ðŸŒ® ðŸŒ® ðŸŒ®"
  end

  error do |lane, exception|
    puts "uh oh...."
  end

end
